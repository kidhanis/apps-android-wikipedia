<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/paper_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:background="?attr/paper_color">

        <include
            android:id="@+id/searchCard"
            layout="@layout/view_search_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/historyMoreButton"
            style="@style/P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/progressive_color"
            android:paddingVertical="16dp"
            android:background="?android:attr/selectableItemBackground"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/recommendedContentTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:tabTextAppearance="@style/H3.Button"
            app:tabTextColor="?attr/placeholder_color"
            app:tabIndicatorFullWidth="true"
            app:tabSelectedTextColor="?attr/progressive_color"
            app:tabIndicatorColor="?attr/progressive_color"
            app:tabRippleColor="?attr/progressive_color" />

        <LinearLayout
            android:id="@+id/recommendedContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>

</ScrollView>

